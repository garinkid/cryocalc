<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
   <style name="button_main_menu">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:background">@layout/common_button_color</item>
		<item name="android:padding">10dp</item>
		<item name="android:textSize">14sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">#151B54</item>
		<item name="android:gravity">center</item>
    </style>
   
    <style name="calculate_button_layout">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_alignParentBottom">true</item>
		<item name="android:padding">5dp</item>
    </style>
   
    <style name="button_centered">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:background">@layout/common_button_color</item>
		<item name="android:paddingTop">10dp</item>
		<item name="android:paddingBottom">10dp</item>
		<item name="android:textSize">15sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">#151B54</item>
		<item name="android:gravity">center</item>
    </style>
    
    <style name="button_left_weighted_width">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:background">@layout/common_button_on_table_color</item>
		<item name="android:padding">10dp</item>
		<item name="android:textSize">15sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">#151B54</item>
		<item name="android:gravity">left</item>
    </style>
    
    <style name="textview_left_weighted_width">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:background">@layout/common_text_box_layout</item>
		<item name="android:padding">10dp</item>
		<item name="android:textSize">14sp</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:gravity">left</item>
    </style>
    
    <style name="edittext_left_weighted_width">
		<item name="android:inputType">numberDecimal</item>
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:background">@layout/common_edittext_box_layout</item>
		<item name="android:padding">10dp</item>
		<item name="android:textSize">15sp</item>
		<item name="android:textColor">#151B54</item>
		<item name="android:gravity">left</item>
    </style>
		
    <style name="tabular_layout">
  		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:background">@layout/common_table_background_layout</item> 
		<item name="android:orientation">horizontal</item>
    </style>
    
    <style name="calculation_title">
        <item name="android:layout_alignParentTop">true</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">16sp</item> 
		<item name="android:padding">15dp</item>
        <item name="android:gravity">center</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">fill_parent</item> 
		<item name="android:textColor">#151B54</item>              
    </style>
    
</resources>