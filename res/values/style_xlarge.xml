<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="button_main_menu_xlarge">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:background">@layout/common_button_color</item>
		<item name="android:padding">20dp</item>
		<item name="android:textSize">30sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">#151B54</item>
		<item name="android:gravity">center</item>
    </style>
    
    <style name="calculate_button_layout_xlarge">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_alignParentBottom">true</item>
		<item name="android:padding">10dp</item>
    </style>
    
    
    <style name="button_centered_xlarge">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:background">@layout/common_button_color</item>
		<item name="android:paddingTop">20dp</item>
		<item name="android:paddingBottom">20dp</item>
		<item name="android:textSize">35sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">#151B54</item>
		<item name="android:gravity">center</item>
    </style>
    
    <style name="button_left_weighted_width_xlarge">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:background">@layout/common_button_color</item>
		<item name="android:padding">20dp</item>
		<item name="android:textSize">35sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">#151B54</item>
		<item name="android:gravity">left</item>
    </style>

    <style name="textview_left_weighted_width_xlarge">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:background">@layout/common_text_box_layout</item>
		<item name="android:padding">20dp</item>
		<item name="android:textSize">30sp</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:gravity">left</item>
    </style>
    
    <style name="edittext_left_weighted_width_xlarge">
		<item name="android:inputType">numberDecimal</item>
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:background">@layout/common_table_background_layout</item>
		<item name="android:padding">20dp</item>
		<item name="android:textSize">35sp</item>
		<item name="android:textColor">#151B54</item>
		<item name="android:gravity">left</item>
    </style>

    <style name="calculation_title_xlarge">
        <item name="android:layout_alignParentTop">true</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">40sp</item> 
		<item name="android:padding">30dp</item>
        <item name="android:gravity">center</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">fill_parent</item> 
		<item name="android:textColor">#151B54</item>              
    </style>
</resources>