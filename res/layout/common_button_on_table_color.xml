<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#3BB9FF"
                android:endColor="#2B60DE"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#3D437C" />
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:startColor="#ADD8E6"
                android:endColor="#719CAA"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#3D437C" />
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="#ADD8E6"
                android:startColor="#C1ECFA"
                android:angle="90" />
            <stroke
                android:width="1dp"
                android:color="#3D437C" />
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
        </shape>
    </item>
</selector>
